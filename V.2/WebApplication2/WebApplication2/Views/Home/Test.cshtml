@section Scripts{

    <script>
        $(Document).ready(function () {
            //alert('Its work');

            $("#fin").click(function () {
                $("#cn").hide();
                $("#cn").fadeIn(5000);
            });
            $("#fout").click(function () {
                $("#cn").show();
                $("#cn").fadeOut(5000);
            });

        });
    </script>


